<header>
  <div class="row">
    <div class="small-12 columns text-center">
      <h1>Supply <span class="svg-container"><%= image_tag "feather.svg", alt: "Crow feather", class: "feather" %></span>Crow</h1>
    </div>
  </div>
</header>
<div class="row">
<%= form_for @user, url: sessions_path do |f| %>
  <div class="small-12 columns">
    <label><%= t('.username') %>
      <%= f.text_field :username, placeholder: t('.username') %>
    </label>
  </div> <!-- /.small-12 -->
  <div class="small-12 columns">
    <label><%= t('.password') %>
      <%= f.password_field :password, placeholder: t('.password') %>
    </label>
  </div> <!-- /.small-12 -->
  <div class="small-12 columns">
    <%= f.submit t('.login_button'), class: "button"  %>
    <%= link_to t('.register_link'), new_registration_path, class: "button secondary bare" %>
  </div> <!-- /.small-12 -->
<% end %>
</div> <!-- /.row -->