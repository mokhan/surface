<% if @training_sessions.any? %>
  <div class="row">
    <div class="large-12 columns">
      <table>
        <thead>
          <tr>
          <td></td>
          <td>Date</td>
          <td>Weight</td>
          <td></td>
          </tr>
        </thead>
        <tbody>
          <%= render @training_sessions %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="large-12 text-center columns">
      <%= paginate @training_sessions, remote: false %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="large-12 columns">
      <%= random_video %>
    </div>
  </div>
<% end %>
